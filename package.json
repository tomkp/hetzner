{
  "name": "@tomkp/hetzner",
  "version": "0.3.0",
  "description": "TypeScript client for the Hetzner Cloud API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node --test --experimental-transform-types --experimental-strip-types 'src/**/*.test.ts'",
    "test:unit": "node --test --experimental-transform-types --experimental-strip-types --test-name-pattern='(?!.*Integration)' 'src/**/*.test.ts'",
    "test:integration": "node --test --experimental-transform-types --experimental-strip-types 'src/integration/*.test.ts'",
    "test:coverage": "node --test --experimental-transform-types --experimental-strip-types --experimental-test-coverage 'src/**/*.test.ts'",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "hetzner",
    "cloud",
    "api",
    "client",
    "typescript"
  ],
  "author": "tomkp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomkp/hetzner.git"
  },
  "bugs": {
    "url": "https://github.com/tomkp/hetzner/issues"
  },
  "homepage": "https://github.com/tomkp/hetzner#readme",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.20.0"
  },
  "engines": {
    "node": ">=22.6.0"
  }
}
